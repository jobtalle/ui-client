{
  "name": "ui-client",
  "version": "0.20.0",
  "license": "GPL-3.0",
  "private": true,
  "scripts": {
    "postinstall": "husky install",
    "build": "concurrently \"yarn --cwd=packages/ui-kit build\" \"yarn --cwd=packages/core build\" && yarn --cwd=packages/app build",
    "build:deps": "concurrently \"yarn --cwd=packages/ui-kit build\" \"yarn --cwd=packages/core build\"",
    "start": "yarn --cwd=packages/app start",
    "docker:build": "DOCKER_BUILDKIT=1 docker build -t ui-client:latest .",
    "prettier": "prettier \"packages/**/*.{ts,tsx}\" --parser typescript",
    "prettier:list": "npm run prettier -- --list-different",
    "prettier:fix": "npm run prettier -- --write",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx packages/**/src",
    "lint:errors": "yarn lint --quiet",
    "lint:fix": "yarn lint --fix",
    "nibble": "eslint-nibble --ext .js,.jsx,.ts,.tsx packages/**/src",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "dependencies": {
    "concurrently": "^7.4.0"
  }
}
